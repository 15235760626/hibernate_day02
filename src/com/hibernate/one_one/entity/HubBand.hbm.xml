<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping >

    <class name="com.hibernate.one_one.entity.HusBand" table="HusBand">
        <id name="id" column="h_id" type="java.lang.Integer">
            <generator class="native"/>
        </id>

        <property name="name" type="java.lang.String" column="h_name"/>

        <!--
        cascade="save-update" 级联添加修改
        -->
        <one-to-one name="wife"  class="com.hibernate.one_one.entity.Wife"  cascade="save-update" ></one-to-one>


    </class>

</hibernate-mapping>
