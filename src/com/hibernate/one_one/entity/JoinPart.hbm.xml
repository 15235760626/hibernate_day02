<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.hibernate.one_one.entity">

    <class name="JoinPart" table="joinpart">
        <id name="id" column="p_id" type="java.lang.Integer">
            <generator class="native"/>
        </id>

        <property name="pname" type="java.lang.String" column="p_name"/>

        <!--
        cascade="save-update" 级联添加修改
        -->
        <one-to-one name="employee" class="Employee" ></one-to-one>

    </class>

</hibernate-mapping>
