<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping >

    <class name="com.hibernate.one_one.entity.Wife" table="Wife">
        <id name="id" column="w_id" type="java.lang.Integer">
            <generator class="native"/>
        </id>

        <property name="name" type="java.lang.String" column="w_name"/>
        <!--
        constrained="true" 共享主键
        -->

        <one-to-one name="husBand"  class="com.hibernate.one_one.entity.HusBand" constrained="true"></one-to-one>
    </class>

</hibernate-mapping>
